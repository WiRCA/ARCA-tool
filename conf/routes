# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Secure module
*       /                                           module:secure

# Language change
GET     /language/{lang}/{url}                      UserController.changeLanguage

# Home page
GET     /                                           ApplicationController.index
GET     /user                                       UserController.index

#Register
GET     /register                                   RegisterController.registerUser
POST    /register                                   RegisterController.register
GET     /regUs                                      RegisterController.regUs

# Create RCACase -page
GET     /CreateRCACase                              RCACaseController.createRCACase
POST    /CreateRCACase                              RCACaseController.create

# Show RCA case
GET     /case/{id}                                  RCACaseController.show
GET     /case/{rcaCaseId}/update/{lastReceived}     RCACaseController.waitMessages

# Ignore favicon requests
GET     /favicon.ico                                404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                    staticDir:public

# Catch all
*       /{controller}/{action}                      {controller}.{action}
