# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

%{ context = play.configuration.getProperty('http.path', '/') }%

# Secure module
GET     ${context}/login                        Secure.login
POST    ${context}/login                        Secure.authenticate
GET     ${context}/logout                       Secure.logout

# Home page
GET     /                                       ApplicationController.index
GET     /user                                   UserController.index

# Create RCACase -page
GET     /CreateRCACase                          RCACaseController.createRCACase
POST    /CreateRCACase                          RCACaseController.create

# Show RCA case
GET     /{id}                                   RCACaseController.show

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
