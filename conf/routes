# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

%{ProblemRoute='/RCACase/{case_id}/ProblemDefinition'}%
%{CauseRoute=ProblemRoute + '/{problem_id}/ProblemCause'}%

# Home page, links to: new-rca-case, view-rca-cases
GET     /                                       RCACaseController.index

#RCACase
GET     /RCACase                                RCACase.index
GET     /RCACase/create                         RCACase.create
GET     /RCACase/{id}/addProblem                RCACaseController.addProblem
POST    /RCACase/{rcaCaseId}/saveProblem        RCACaseController.saveProblem
GET     ${ProblemRoute}                         ProblemDefinition.index
GET     ${CauseRoute}                           ProblemCause.index
GET     ${CauseRoute}/{cause_id}/CorrectiveAction CorrectiveAction.index
# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
